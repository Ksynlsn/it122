    <style>
        * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        }
        html {
          font-size: 16px;
        }
        header {
        padding: 2.2rem;
        background-color: #6CABA6;
        }
        nav a {
        text-decoration: none;
        font-family: 'Palanquin Dark', sans-serif;
        color: #102D45;
        padding-left: 1.6rem;
        font-size: 2.9rem;
        }
        nav ul {
        display: flex;
        justify-content: left;
        list-style-type: none;
        }
        .wrapper { 
        max-width: 1500px;
        min-width: 520px;
        display: flex;
        flex-direction: column;
        min-height: 100%;
        }
        .flex-container {
          display: flex;
        }
        h1 {
        font-family: 'Inter', sans-serif;
        font-size: 1.8rem;
        color: #76AFDE;
        padding: 1rem;
        }
        h2 {
        font-family: 'Inter', sans-serif;
        font-size: 1.4rem;
        color:#6CABA6;
        }
        li {
        font-family: 'Dongle', sans-serif;
        list-style-type: none;
        font-size: 2rem;
        }
        p {
        font-family: 'Dongle', sans-serif;
        font-size: 2.2rem;
        }
        h1, h2, p {
          text-align: center;
        }
        .flex-container.home {
        justify-content: center;
        }
        .flex-container #cats { /* ul */
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-evenly;
        }
        #cats li {
        padding: 2.6rem;
        color: #102D45;
        }
        footer {
        width: 100%;
        min-height: 300px;
        background-color: #102D45;
        }
        .footer-top {
        background: #B5A4A0;
        height: 50px;
        margin-bottom: 200px;
        }
        footer p {
        color: #B5A4A0;
        }
      </style>

<body>
  <div id="root" className="wrapper"> <!-- wrapper -->

  <script type="text/babel">
    let cats = <%- cats %>;

    const Header = () => (
      <header>
