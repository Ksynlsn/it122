      </div>
    )

    const HeadingOne = ({ message }) => (
      <div>
        <h1>{message}</h1>
      </div>
    )

     const HeadingTwo = ({ message }) => (
      <div>
        <h2>{message}</h2>
      </div>
    )

    const Main = () => (
      <main>
       <div className="flex-container home">
         <CatList /> 
       </div>
      </main>
    )
    
    const Footer = () => (
        <footer>
          <div className="footer-top"></div>
          <p>&copy; Copyright 2023 ~ This Is A Footer</p>
        </footer>
    )

